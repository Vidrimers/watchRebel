# ============================================
# watchRebel - Переменные окружения
# ============================================

# ============================================
# Server Configuration
# ============================================
PORT=1313
NODE_ENV=development

# ============================================
# Telegram Bot Configuration
# ============================================
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ID администратора (ваш Telegram ID)
# Узнать свой ID можно у @userinfobot
TELEGRAM_ADMIN_ID=your_telegram_id_here

# ============================================
# Telegram Webhook (только для production)
# ============================================
# URL вашего сервера для webhook
WEBHOOK_URL=https://your-domain.com

# Порт для webhook (обычно 8443 или 443)
WEBHOOK_PORT=8443

# ============================================
# TMDb API Configuration
# ============================================
# Получите API ключ на https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here

# Базовый URL TMDb API (обычно не требует изменений)
TMDB_BASE_URL=https://api.themoviedb.org/3

# ============================================
# Public URLs
# ============================================
# URL для доступа к приложению (для production используйте ваш домен)
PUBLIC_URL=http://localhost:1313

# URL API для Telegram бота (обычно совпадает с PUBLIC_URL)
API_URL=http://localhost:1313

# ============================================
# Database Configuration
# ============================================
# Путь к файлу базы данных SQLite
DB_PATH=./server/rebel.db

# Директория для резервных копий
BACKUP_DIR=./server/backups

# ============================================
# Session Configuration
# ============================================
# Секретный ключ для подписи сессий (используйте случайную строку)
# Сгенерировать можно командой: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_session_secret_here

# Время жизни сессии в часах (по умолчанию 30 дней)
SESSION_EXPIRY_HOURS=720

# ============================================
# Email Configuration (SMTP)
# ============================================
# Настройки SMTP для отправки email
# Для Gmail: smtp.gmail.com, порт 587
# Для SendGrid: smtp.sendgrid.net, порт 587
# Для Mailgun: smtp.mailgun.org, порт 587
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
SMTP_FROM=watchRebel <noreply@watchrebel.com>

# Примечание для Gmail:
# 1. Включите двухфакторную аутентификацию
# 2. Создайте пароль приложения: https://myaccount.google.com/apppasswords
# 3. Используйте пароль приложения в SMTP_PASS

# ============================================
# Google OAuth Configuration
# ============================================
# Получите credentials в Google Cloud Console: https://console.cloud.google.com/
# 1. Создайте проект
# 2. Включите Google+ API
# 3. Создайте OAuth 2.0 Client ID (Web application)
# 4. Добавьте Authorized redirect URIs: http://localhost:1313/api/auth/google/callback и https://your-domain.com/api/auth/google/callback
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:1313/api/auth/google/callback

# ============================================
# Discord OAuth Configuration
# ============================================
# Получите credentials в Discord Developer Portal: https://discord.com/developers/applications
# 1. Создайте приложение
# 2. Перейдите в OAuth2
# 3. Добавьте Redirects: http://localhost:1313/api/auth/discord/callback и https://your-domain.com/api/auth/discord/callback
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here
DISCORD_CALLBACK_URL=http://localhost:1313/api/auth/discord/callback

# ============================================
# Logging Configuration
# ============================================
# Уровень логирования: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# Директория для файлов логов
LOG_DIR=./logs

# ============================================
# Frontend Configuration (опционально)
# ============================================
# Эти переменные используются при сборке frontend
# VITE_API_URL=http://localhost:1313/api
# VITE_PUBLIC_URL=http://localhost:1313
# VITE_WS_URL=ws://localhost:1313/ws
